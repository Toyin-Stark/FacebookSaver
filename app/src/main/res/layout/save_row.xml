<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">






    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#37474F"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />


            <ImageView
                android:id="@+id/playable"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/ic_video"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lana"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            >


            <ImageView
                android:id="@+id/icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_picture"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                >


         <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#fff"
            />




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"

                    >





            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#777"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:visibility="gone"

                />


                    <TextView
                        android:id="@+id/size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#f1f1f1"
                        android:layout_weight="1"
                        android:drawablePadding="4dp"
                        android:drawableStart="@drawable/ic_file"
                        android:text="hi"

                        />



                <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#fff"
                app:relative_time_prefix=""
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="3dp"


                />




            <TextView
                android:id="@+id/links"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#777"
                android:visibility="gone"
                android:layout_weight="1"
                />


            <TextView
                android:id="@+id/typePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#777"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_clock"
                android:drawableTint="#777"
                android:drawablePadding="4dp"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/typeVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#888"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_clock"
                android:drawableTint="#888"
                android:drawablePadding="4dp"
                android:visibility="gone"
                />
                </LinearLayout>

                </RelativeLayout>

        </LinearLayout>


         </LinearLayout>


    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
